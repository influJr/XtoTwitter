{
    "manifest_version": 3,
    "name": "XtoTwitter",
    "version": "0.0.2",
    "description": "Replace the X with the Twitter",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["https://twitter.com/*","https://x.com/*","https://*/*"],
            "js": ["script.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icon.png"
    }
}